<form action="/items/<%= @item.id %>" method="post">
  <input type="hidden" name="_method" value="put">
  <label for="title">Title:</label>
  <input type="text" name="title" id="title" value="<%= @item.title %>">
  <br>
  <label for="price">Price:</label>
  <input type="text" name="price" id="price" value="<%= @item.formatted_price %>">
  <br>
  <label for="condition">Condition:</label>
  <input type="text" name="condition" id="condition" value="<%= @item.condition %>">
  <br>
  <label for="description">Description:</label>
  <textarea name="description" id="description" cols="30" rows="10"><%= @item.description %></textarea>
  <br>
  <!-- <label for="life_span">Time Limit:</label> -->
  <input type="hidden" name="life_span" id="life_span" value="<%= @item.life_span %>">
  <!-- <br> -->
  <label for="latitude">Latitude:</label>
  <input type="text" name="latitude" id="latitude" value="<%= @item.latitude %>">
  <br>
  <label for="longitude">Longitude:</label>
  <input type="text" name="longitude" id="longitude" value="<%= @item.longitude %>">
  <br>
  <button>Post</button>
</form>