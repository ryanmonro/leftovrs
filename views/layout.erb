<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Leftovrs</title>
  <link href="https://fonts.googleapis.com/css?family=Montserrat:700|Roboto" rel="stylesheet">
  <link rel='stylesheet' href='/stylesheets/main.css'>
</head>
<body>
  <header>
    <h1>Leftovrs</h1>
    <nav>
      <% if logged_in? %>
      <a href="/items/new">Post new item</a>
      <a href="/items">Items near me</a>
      <a href="/me">My Items</a>
      <% end %>
    </nav>
    <section id="user-info">
    <% if logged_in? %>
      Logged in as <a href="/me"><%= current_user.name %></a>
      <form action="/session" method="post">
        <input type="hidden" name="_method" value="delete">
        <button>Logout</button>
      </form>
    <% else %>
      <a href="/login">Log In</a>
      <a href="/signup">Sign Up</a>
    <% end %>
    </section>
  </header>
  <main>
  <%= yield %>
  </main>
  <script src='/javascripts/application.js'></script>
</body>
</html>